{
  "extends": "ts-config-single-spa",
  "include": [
    "src/**/*", "../@types"
  ],
  "alwaysStrict": true,
  "noFallthroughCasesInSwitch": true,
  "noUnusedLocals": true,
  "noUnusedParameters": true,
  "forceConsistentCasingInFileNames": true,
  "strict": true,
  "compilerOptions": {
    "composite": true
  }
}